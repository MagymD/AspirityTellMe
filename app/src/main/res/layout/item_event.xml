<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_event_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:background="@color/unread_event"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_event_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:text="oiuytrew"
        android:textColor="@color/primaryLight"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/item_event_subscription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_filter_color" />

            <TextView
                android:id="@+id/item_event_filter_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="asdasdasdasfbeadefrtgtrfedrftghtfrd"
                android:textColor="@color/primaryLight"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_template_color" />

            <TextView
                android:id="@+id/item_event_template_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="asdasdasdasfbeadefrtgtrfedrftghtfrd"
                android:textColor="@color/primaryLight"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="3"
        android:text="asdasdasasdasdasdasfbeadefrtgtrfedrftghtfrdasdasdasdasfbeadefrtgtrfedrftghtfrdasdasdasdasfbeadefrtgtrfedrftghtfrdasdasdasdasfbeadefrtgtrfedrftghtfrddasfbeadefrtasdasdasdasfbeadefrtgtrfedrftghtfrdasdasdasdasfbeadefrtgtrfedrftghtfrdgtrfedrftghtfrd"
        android:textColor="@color/primaryText"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#1F000000" />

</LinearLayout>